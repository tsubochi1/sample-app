<h1>タスク詳細</h1>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-bordered" id="table-task-description">
      <tbody>
        <tr>
          <th class="active col-md-2">ID</th><td><%= @task.id %></td>
        </tr>
        <tr>
          <th class="active">名称</th><td><%= @task.name %></td>
        </tr>
        <tr>
          <th class="active">詳細</th><td id="description"><%= @task.description %></td>
        </tr>
        <tr>
          <th class="active">作成日</th><td><%= l(@task.created_at, format: :long) %></td>
        </tr>
        <tr>
          <th class="active">更新日</th><td><%= l(@task.updated_at, format: :long) %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>











