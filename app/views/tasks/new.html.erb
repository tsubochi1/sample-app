<% provide(:title, 'New') %>
<div class="container">
  <h1>タスク新規作成</h1>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= form_with(model: @task, url: user_tasks_path(current_user), local: true) do |f| %>
        <%= render partial: 'shared/error_messages', collection: @task %>
        
          <%= f.label :name, class: "label-form" %>
          <%= f.text_field :name, class: "form-control" %>
          <%= f.label :note, class: "label-form" %>
          <%= f.text_area :note, class: "form-control", size: "15x5" %>

        <%= f.submit "新規登録", class: "btn btn-lg btn-primary btn-form" %>
      <% end %>
    </div>
  </div>